---
// src/components/CTA.astro
export interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonLink?: string;
  variant?: 'green-orange' | 'blue' | 'purple';
}

const {
  title = "Prêt à optimiser vos images ?",
  description = "Mettez en pratique ces conseils avec notre outil gratuit de traitement par lot",
  buttonText = "Utiliser l'outil maintenant",
  buttonLink = "/",
  variant = "green-orange"
} = Astro.props;

const variantClasses = {
  "green-orange": "bg-gradient-to-br from-green-500 to-orange-500",
  blue: "bg-blue-600",
  purple: "bg-purple-600"
};
---

<section class="py-16 my-12">
  <div class="max-w-6xl mx-auto px-6">
    <div class={`${variantClasses[variant]} rounded-3xl p-12 text-center shadow-xl`}>
      <h2 class="text-2xl md:text-3xl font-bold text-white mb-6">
        {title}
      </h2>
      <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto leading-relaxed">
        {description}
      </p>
      <a 
        href={buttonLink}
        class="inline-flex items-center gap-3 bg-white/95 backdrop-blur text-gray-800 px-8 py-4 rounded-2xl font-semibold hover:bg-white hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-2xl"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        {buttonText}
      </a>
    </div>
  </div>
</section>