---
// Navigation component
---

<nav class="bg-white border-b py-4 px-6 w-full h-20 fixed top-0 left-0 z-50">
  <div class="max-w-7xl mx-auto h-full flex items-center justify-between">
    <!-- Logo -->
    <div class="flex-shrink-0">
      <a href="/" class="text-xl font-bold text-gray-800">
        <img class="w-32" src="/logo.png" alt="Logo"/>
      </a>
    </div>

    <!-- Desktop Menu -->
    <div class="font-medium hidden md:flex items-center space-x-8">
      <a href="https://www.omnaris.fr" target="_blank" class=" text-black hover:text-primary transition-colors">Visiter Omnaris</a>
      <!--<a href="/services" class="text-black hover:text-primary transition-colors">Convertir</a>-->
    </div>

    <!-- Contact Button -->
    <div class="hidden md:block">
      <a href="https://www.omnaris.fr/contact" class="bg-primary hover:bg-primary/90 text-white px-4 py-2 rounded-md transition-colors">
        Nous contacter
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <div class="md:hidden">
      <button id="menu-toggle" class="text-gray-600 hover:text-gray-900 focus:outline-none">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden hidden fixed top-16 left-0 w-full bg-white shadow-md z-40 pb-4">
    <div class="flex flex-col space-y-4 px-6 pt-4">
      <a href="https://www.omnaris.fr" class="text-gray-600 hover:text-gray-900 transition-colors">Visiter Omnaris</a>
      <a href="/contact" class="bg-primary hover:bg-primary/90 text-white px-4 py-2 rounded-md transition-colors flex justify-center w-full">
        Contact
      </a>
    </div>
  </div>
</nav>

<script client:load>
  // Toggle mobile menu
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');

  if (menuToggle && mobileMenu) {
    menuToggle.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }

  // Close mobile menu when clicking outside
  document.addEventListener('click', (event) => {
    if (mobileMenu && !mobileMenu.classList.contains('hidden') && 
        !mobileMenu.contains(event.target) && 
        menuToggle && !menuToggle.contains(event.target)) {
      mobileMenu.classList.add('hidden');
    }
  });
</script>
