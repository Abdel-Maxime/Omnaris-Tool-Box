<script>
  // Ã‰tat global
  let tocOpen = false;

  // Initialisation
  document.addEventListener('DOMContentLoaded', function() {
    initializeScrollEffects();
    initializeTOC();
    initializeCopyLink();
    initializeBackToTop();
    initializeContentInteractions();
  });

  // Effets de scroll
  function initializeScrollEffects() {
    const progressBar = document.getElementById('progress-bar');

    window.addEventListener('scroll', () => {
      const scrolled = window.pageYOffset;
      const docHeight = document.documentElement.scrollHeight - window.innerHeight;
      const progress = (scrolled / docHeight) * 100;

      // Barre de progression
      if (progressBar) {
        progressBar.style.width = Math.min(progress, 100) + '%';
      }
    });
  }

  // Table des matiÃ¨res
  function initializeTOC() {
    const tocToggle = document.getElementById('toc-toggle');
    const tocClose = document.getElementById('toc-close');
    const mobileToc = document.getElementById('mobile-toc');
    const mobileOverlay = document.getElementById('mobile-toc-overlay');
    const tocLinks = document.querySelectorAll('.toc-link, .mobile-toc-link');

    // Toggle TOC mobile
    tocToggle?.addEventListener('click', () => {
      tocOpen = true;
      updateTOCVisibility();
    });

    tocClose?.addEventListener('click', () => {
      tocOpen = false;
      updateTOCVisibility();
    });

    // Fermer en cliquant sur l'overlay
    mobileOverlay?.addEventListener('click', () => {
      tocOpen = false;
      updateTOCVisibility();
    });

    function updateTOCVisibility() {
      if (mobileToc && mobileOverlay) {
        if (tocOpen) {
          mobileToc.style.transform = 'translateX(0)';
          mobileOverlay.style.opacity = '1';
          mobileOverlay.style.pointerEvents = 'auto';
          document.body.style.overflow = 'hidden';
        } else {
          mobileToc.style.transform = 'translateX(-100%)';
          mobileOverlay.style.opacity = '0';
          mobileOverlay.style.pointerEvents = 'none';
          document.body.style.overflow = '';
        }
      }
    }

    // Scroll spy pour le sommaire
    const headings = document.querySelectorAll('h2[id], h3[id], h4[id]');
    const observerOptions = {
      rootMargin: '-20% 0px -80% 0px',
      threshold: 0
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        const id = entry.target.getAttribute('id');
        const tocLink = document.querySelector(`[data-target="${id}"]`);
        
        if (entry.isIntersecting) {
          // Retirer l'active de tous les liens
          tocLinks.forEach(link => link.classList.remove('active'));
          // Ajouter active au lien courant
          tocLink?.classList.add('active');
        }
      });
    }, observerOptions);

    headings.forEach(heading => observer.observe(heading));

    // Smooth scroll pour les liens TOC
    tocLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const targetId = link.getAttribute('data-target');
        const targetElement = document.getElementById(targetId);
        
        if (targetElement) {
          targetElement.scrollIntoView({ 
            behavior: 'smooth',
            block: 'start'
          });
        }
        
        // Fermer le TOC mobile aprÃ¨s clic
        if (tocOpen) {
          tocOpen = false;
          updateTOCVisibility();
        }
      });
    });
  }

  // Copier le lien
  function initializeCopyLink() {
    const copyButton = document.getElementById('copy-link');
    
    copyButton?.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(window.location.href);
        
        // Feedback visuel
        const originalContent = copyButton.innerHTML;
        copyButton.innerHTML = `
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        `;
        copyButton.classList.remove('bg-gray-600');
        copyButton.classList.add('bg-green-600');
        
        setTimeout(() => {
          copyButton.innerHTML = originalContent;
          copyButton.classList.remove('bg-green-600');
          copyButton.classList.add('bg-gray-600');
        }, 2000);
      } catch (err) {
        console.error('Erreur lors de la copie:', err);
      }
    });
  }

  // Retour en haut
  function initializeBackToTop() {
    const backToTop = document.getElementById('back-to-top');
    
    window.addEventListener('scroll', () => {
      const scrolled = window.pageYOffset;

      if (backToTop) {
        if (scrolled > 300) {
          backToTop.style.opacity = '1';
          backToTop.style.pointerEvents = 'auto';
        } else {
          backToTop.style.opacity = '0';
          backToTop.style.pointerEvents = 'none';
        }
      }
    });
    
    backToTop?.addEventListener('click', () => {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });
  }

  // Interactions pour le contenu enrichi
  function initializeContentInteractions() {
    initializeTabs();
    initializeAccordions();
    initializeImageZoom();
    initializeLazyLoading();
    initializeProgressBars();
    generateIdsForHeadings();
  }

  // Onglets
  function initializeTabs() {
    const tabContainers = document.querySelectorAll('.tabs');
    
    tabContainers.forEach(container => {
      const tabButtons = container.querySelectorAll('.tab-button');
      const tabContents = container.querySelectorAll('.tab-content');
      
      tabButtons.forEach((button, index) => {
        button.addEventListener('click', () => {
          // DÃ©sactiver tous les onglets
          tabButtons.forEach(btn => btn.classList.remove('active'));
          tabContents.forEach(content => content.classList.remove('active'));
          
          // Activer l'onglet cliquÃ©
          button.classList.add('active');
          if (tabContents[index]) {
            tabContents[index].classList.add('active');
          }
        });
      });
      
      // Activer le premier onglet par dÃ©faut
      if (tabButtons[0] && tabContents[0]) {
        tabButtons[0].classList.add('active');
        tabContents[0].classList.add('active');
      }
    });
  }

  // AccordÃ©ons
  function initializeAccordions() {
    const accordionItems = document.querySelectorAll('.accordion-item');
    
    accordionItems.forEach(item => {
      const header = item.querySelector('.accordion-header');
      const content = item.querySelector('.accordion-content');
      const icon = item.querySelector('.accordion-icon');
      
      if (header && content) {
        // Cacher le contenu par dÃ©faut
        content.style.display = 'none';
        
        header.addEventListener('click', () => {
          const isOpen = content.style.display !== 'none';
          
          if (isOpen) {
            content.style.display = 'none';
            icon?.style.setProperty('transform', 'rotate(0deg)');
          } else {
            content.style.display = 'block';
            icon?.style.setProperty('transform', 'rotate(180deg)');
          }
        });
      }
    });
  }

  // Zoom d'images
  function initializeImageZoom() {
    const images = document.querySelectorAll('.article-content img');
    
    images.forEach(img => {
      img.addEventListener('click', () => {
        if (img.classList.contains('zoomed')) {
          img.classList.remove('zoomed');
          img.style.transform = 'scale(1)';
          img.style.cursor = 'zoom-in';
          img.style.zIndex = 'auto';
          img.style.position = 'relative';
        } else {
          img.classList.add('zoomed');
          img.style.transform = 'scale(1.5)';
          img.style.cursor = 'zoom-out';
          img.style.zIndex = '50';
          img.style.position = 'relative';
          img.style.transition = 'transform 0.3s ease';
        }
      });
      
      // Curseur initial
      img.style.cursor = 'zoom-in';
    });
  }

  // Lazy loading pour images
  function initializeLazyLoading() {
    if ('IntersectionObserver' in window) {
      const imageObserver = new IntersectionObserver((entries, observer) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const img = entry.target;
            if (img.dataset.src) {
              img.src = img.dataset.src;
              img.classList.remove('lazy');
              observer.unobserve(img);
            }
          }
        });
      });

      document.querySelectorAll('img[data-src]').forEach(img => {
        imageObserver.observe(img);
      });
    }
  }

  // Animation des barres de progression
  function initializeProgressBars() {
    const progressBars = document.querySelectorAll('.progress-bar[data-progress]');
    
    const progressObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const bar = entry.target;
          const progress = bar.dataset.progress;
          setTimeout(() => {
            bar.style.width = progress + '%';
          }, 200);
          progressObserver.unobserve(bar);
        }
      });
    });

    progressBars.forEach(bar => {
      bar.style.width = '0%';
      progressObserver.observe(bar);
    });
  }

  // GÃ©nÃ©ration automatique d'IDs pour les titres
  function generateIdsForHeadings() {
    const headings = document.querySelectorAll('.article-content h2:not([id]), .article-content h3:not([id]), .article-content h4:not([id])');
    
    headings.forEach(heading => {
      const text = heading.textContent.trim();
      const id = text
        .toLowerCase()
        .replace(/[^a-z0-9\s-]/g, '')
        .replace(/\s+/g, '-')
        .replace(/-+/g, '-')
        .replace(/^-|-$/g, '');
      
      if (id && !document.getElementById(id)) {
        heading.id = id;
        
        // Ajouter une ancre cliquable
        const anchor = document.createElement('a');
        anchor.href = `#${id}`;
        anchor.className = 'heading-anchor opacity-0 hover:opacity-100 transition-opacity duration-200 text-blue-600 hover:text-blue-700 ml-2 no-underline';
        anchor.innerHTML = '#';
        anchor.setAttribute('aria-label', `Lien vers ${text}`);
        
        heading.appendChild(anchor);
        
        heading.addEventListener('mouseenter', () => {
          anchor.classList.remove('opacity-0');
        });
        
        heading.addEventListener('mouseleave', () => {
          anchor.classList.add('opacity-0');
        });
      }
    });
  }

  // Utilitaires pour le contenu interactif
  window.toggleAccordion = function(element) {
    const content = element.nextElementSibling;
    const icon = element.querySelector('.accordion-icon');
    
    if (content.style.display === 'none' || !content.style.display) {
      content.style.display = 'block';
      icon?.style.setProperty('transform', 'rotate(180deg)');
    } else {
      content.style.display = 'none';
      icon?.style.setProperty('transform', 'rotate(0deg)');
    }
  };

  window.switchTab = function(tabIndex, container) {
    const tabButtons = container.querySelectorAll('.tab-button');
    const tabContents = container.querySelectorAll('.tab-content');
    
    tabButtons.forEach(btn => btn.classList.remove('active'));
    tabContents.forEach(content => content.classList.remove('active'));
    
    if (tabButtons[tabIndex] && tabContents[tabIndex]) {
      tabButtons[tabIndex].classList.add('active');
      tabContents[tabIndex].classList.add('active');
    }
  };

  // Gestion des raccourcis clavier
  document.addEventListener('keydown', (e) => {
    // Ã‰chap pour fermer les overlays
    if (e.key === 'Escape') {
      if (tocOpen) {
        tocOpen = false;
        updateTOCVisibility();
      }
    }
    
    // Ctrl/Cmd + K pour focus sur la recherche (si prÃ©sente)
    if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
      e.preventDefault();
      const searchInput = document.querySelector('input[type="search"]');
      searchInput?.focus();
    }
  });
</script>