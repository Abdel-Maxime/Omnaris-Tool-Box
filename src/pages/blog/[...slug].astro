---
// src/pages/blog/[...slug].astro
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/main.astro';
import CTA from '../../components/CTA.astro';

// GÃ©nÃ©rer les chemins statiques pour tous les articles
export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, headings } = await post.render();

// Calculer le temps de lecture (200 mots par minute)
function calculateReadingTime(content) {
  const wordsPerMinute = 200;
  const wordCount = content.split(/\s+/).length;
  return Math.ceil(wordCount / wordsPerMinute);
}

const readingTime = post.data.readingTime || calculateReadingTime(post.body);

// Configuration SEO dynamique basÃ©e sur l'article
const seoConfig = {
  title: `${post.data.title} | Blog Tool Box Omnaris`,
  description: post.data.description,
  keywords: post.data.tags ? post.data.tags.join(', ') : 'optimisation images, performance web',
  canonical: `https://toolbox.omnaris.fr/blog/${post.slug}/`,
  ogImage: post.data.image || "/og-image-blog.jpg"
};

// RÃ©cupÃ©rer d'autres articles pour les suggestions
const allPosts = await getCollection('blog');
const otherPosts = allPosts
  .filter(p => p.slug !== post.slug)
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime())
  .slice(0, 3);

// GÃ©nÃ©rer le sommaire Ã  partir des headings H2 et H3
const tocItems = headings.filter(h => h.depth <= 3).map(heading => ({
  ...heading,
  slug: heading.slug || heading.text.toLowerCase().replace(/[^a-z0-9]+/g, '-')
}));
---

<MainLayout content={seoConfig}>
  <!-- Schema.org JSON-LD pour article -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": post.data.title,
    "description": post.data.description,
    "abstract": post.data.summary,
    "author": {
      "@type": "Organization",
      "name": post.data.author
    },
    "datePublished": post.data.publishDate.toISOString(),
    "dateModified": (post.data.updatedDate || post.data.publishDate).toISOString(),
    "image": post.data.image ? `https://toolbox.omnaris.fr${post.data.image}` : "https://toolbox.omnaris.fr/og-image-blog.jpg",
    "url": `https://toolbox.omnaris.fr/blog/${post.slug}/`,
    "wordCount": post.body.split(/\s+/).length,
    "timeRequired": `PT${readingTime}M`,
    "publisher": {
      "@type": "Organization",
      "name": "Omnaris",
      "logo": {
        "@type": "ImageObject",
        "url": "https://toolbox.omnaris.fr/logo.png"
      }
    }
  })} />

  <!-- Barre de progression de lecture -->
  <div id="reading-progress" class="fixed top-0 left-0 w-full h-1 bg-gray-100 z-50">
    <div id="progress-bar" class="h-full bg-gradient-to-r from-blue-500 to-purple-600 transition-all duration-150 ease-out" style="width: 0%"></div>
  </div>

  <!-- Container principal avec layout grid -->
  <div class="min-h-screen bg-white">
    <div class="max-w-8xl mx-auto grid lg:grid-cols-[280px_1fr] gap-6 px-4 lg:px-6">
      
      <!-- SIDEBAR - Table des matiÃ¨res -->
      <aside class="hidden lg:block">
        <div class="sticky top-24 bg-white rounded-2xl shadow-sm border border-gray-100 p-6 max-h-[calc(100vh-6rem)] overflow-y-auto">
          <!-- Header sidebar -->
          <div class="mb-6 pb-4 border-b border-gray-100">
            <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2">
              <span class="text-blue-600">ðŸ“‘</span>
              Sommaire
            </h3>
            <div class="grid grid-cols-1 gap-2 text-sm">
              <div class="flex items-center gap-2 text-gray-600 bg-gray-50 rounded-lg px-3 py-2">
                <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="font-medium">{readingTime} min de lecture</span>
              </div>
              <div class="flex items-center gap-2 text-gray-600 bg-gray-50 rounded-lg px-3 py-2">
                <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <span class="font-medium">{post.body.split(/\s+/).length} mots</span>
              </div>
            </div>
          </div>

          <!-- Navigation du sommaire -->
          <nav class="space-y-1 mb-6">
            {tocItems.map((item) => (
              <a 
                href={`#${item.slug}`}
                class={`group block py-3 px-4 rounded-xl text-sm hover:bg-blue-50 hover:text-blue-700 transition-all duration-200 toc-link border-l-2 border-transparent hover:border-blue-200 ${
                  item.depth === 2 ? 'text-gray-900 font-semibold' : 
                  item.depth === 3 ? 'text-gray-700 ml-4 font-medium' : 
                  'text-gray-600 ml-8'
                }`}
                data-target={item.slug}
              >
                <span class="flex items-center gap-2">
                  {item.depth === 2 && (
                    <span class="w-2 h-2 bg-blue-400 rounded-full opacity-0 group-hover:opacity-100 transition-opacity"></span>
                  )}
                  {item.text}
                </span>
              </a>
            ))}
          </nav>

          <!-- Partage social -->
          <div class="pt-4 border-t border-gray-100">
            <h4 class="text-sm font-semibold text-gray-900 mb-4 flex items-center gap-2">
              <span class="text-purple-600">ðŸ”—</span>
              Partager
            </h4>
            <div class="flex gap-2">
              <a 
                href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(`https://toolbox.omnaris.fr/blog/${post.slug}/`)}`}
                target="_blank" 
                rel="noopener noreferrer"
                class="flex-1 p-3 bg-blue-500 text-white rounded-xl hover:bg-blue-600 transition-colors text-center"
                aria-label="Partager sur Twitter"
              >
                <svg class="w-4 h-4 mx-auto" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
              <a 
                href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(`https://toolbox.omnaris.fr/blog/${post.slug}/`)}`}
                target="_blank" 
                rel="noopener noreferrer"
                class="flex-1 p-3 bg-blue-700 text-white rounded-xl hover:bg-blue-800 transition-colors text-center"
                aria-label="Partager sur LinkedIn"
              >
                <svg class="w-4 h-4 mx-auto" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
              <button 
                id="copy-link"
                class="flex-1 p-3 bg-gray-600 text-white rounded-xl hover:bg-gray-700 transition-colors"
                aria-label="Copier le lien"
              >
                <svg class="w-4 h-4 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </aside>

      <!-- BOUTON MOBILE SOMMAIRE -->
      <button id="toc-toggle" class="lg:hidden fixed left-4 top-24 z-40 p-3 bg-white rounded-full shadow-lg border border-gray-200 hover:bg-gray-50 transition-all duration-200" aria-label="Ouvrir le sommaire">
        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"></path>
        </svg>
      </button>

      <!-- CONTENU PRINCIPAL -->
      <main class="min-w-0">
        <article class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
          <!-- Breadcrumb -->
          <nav class="px-8 py-4 border-b border-gray-100" aria-label="Breadcrumb">
            <ol class="flex items-center space-x-2 text-sm text-gray-500">
              <li><a href="/" class="hover:text-blue-600 transition-colors">Accueil</a></li>
              <li><span>/</span></li>
              <li><a href="/blog" class="hover:text-blue-600 transition-colors">Blog</a></li>
              {post.data.category && (
                <>
                  <li><span>/</span></li>
                  <li class="text-gray-700">{post.data.category}</li>
                </>
              )}
              <li><span>/</span></li>
              <li class="text-gray-900 font-medium truncate max-w-md">{post.data.title}</li>
            </ol>
          </nav>

          <!-- Header de l'article -->
          <header class="px-8 lg:px-16 py-8">
            {post.data.image && (
              <div class="aspect-video rounded-2xl overflow-hidden mb-8 shadow-lg">
                <img 
                  src={post.data.image} 
                  alt={post.data.title}
                  class="w-full h-full object-cover"
                  loading="eager"
                />
              </div>
            )}
            
            <div class="max-w-5xl">
              <!-- Meta informations -->
              <div class="flex flex-wrap items-center gap-4 mb-6 text-sm">
                <time class="flex items-center gap-2 text-gray-600" datetime={post.data.publishDate.toISOString()}>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  {new Date(post.data.publishDate).toLocaleDateString('fr-FR', {
                    day: 'numeric',
                    month: 'long',
                    year: 'numeric'
                  })}
                </time>
                
                <div class="flex items-center gap-2 text-gray-600">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span>{readingTime} min de lecture</span>
                </div>

                <div class="flex items-center gap-2 text-gray-600">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  <span>Par {post.data.author}</span>
                </div>
              </div>
              
              <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6 leading-tight">
                {post.data.title}
              </h1>
              
              <p class="text-xl text-gray-700 mb-6 leading-relaxed">
                {post.data.description}
              </p>
              
              {post.data.tags && (
                <div class="flex flex-wrap gap-2">
                  {post.data.tags.map((tag) => (
                    <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full hover:bg-gray-200 transition-colors">
                      #{tag}
                    </span>
                  ))}
                </div>
              )}
            </div>
          </header>

          <!-- RÃ©sumÃ© de l'article -->
          {post.data.summary && (
            <section class="px-8 lg:px-16 mb-8">
              <div class="max-w-5xl">
                <div class="bg-gradient-to-r from-blue-50 to-indigo-50 border-l-4 border-blue-500 rounded-r-2xl p-6 shadow-sm">
                  <div class="flex items-start gap-4">
                    <div class="flex-shrink-0 w-10 h-10 bg-blue-500 bg-opacity-10 rounded-full flex items-center justify-center">
                      <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                      </svg>
                    </div>
                    <div class="flex-1">
                      <h2 class="text-lg font-bold text-gray-900 mb-3">ðŸ“– RÃ©sumÃ© de l'article</h2>
                      <p class="text-gray-800 leading-relaxed">
                        {post.data.summary}
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </section>
          )}

          <!-- Contenu de l'article -->
          <div class="px-8 lg:px-16 pb-8">
            <div class="max-w-5xl">
              <div class="prose prose-lg max-w-none article-content
                          /* === HEADINGS === */
                          prose-headings:text-gray-900 prose-headings:font-bold prose-headings:scroll-mt-24
                          prose-h1:text-4xl prose-h1:mt-0 prose-h1:mb-8 prose-h1:leading-tight
                          prose-h2:text-2xl prose-h2:mt-16 prose-h2:mb-6 prose-h2:border-b prose-h2:border-gray-200 prose-h2:pb-4 prose-h2:relative
                          prose-h3:text-xl prose-h3:mt-12 prose-h3:mb-4 prose-h3:text-gray-800
                          prose-h4:text-lg prose-h4:mt-8 prose-h4:mb-3 prose-h4:text-gray-700
                          prose-h5:text-base prose-h5:mt-6 prose-h5:mb-2 prose-h5:text-gray-600 prose-h5:font-semibold
                          prose-h6:text-sm prose-h6:mt-4 prose-h6:mb-2 prose-h6:text-gray-500 prose-h6:font-medium prose-h6:uppercase prose-h6:tracking-wide
                          
                          /* === TEXT & PARAGRAPHS === */
                          prose-p:text-gray-800 prose-p:leading-relaxed prose-p:mb-6 prose-p:text-lg
                          prose-lead:text-xl prose-lead:text-gray-700 prose-lead:font-medium prose-lead:mb-8
                          
                          /* === LINKS === */
                          prose-a:text-blue-600 prose-a:no-underline hover:prose-a:text-blue-700 prose-a:font-medium hover:prose-a:underline prose-a:transition-colors prose-a:duration-200
                          
                          /* === EMPHASIS === */
                          prose-strong:text-gray-900 prose-strong:font-semibold
                          prose-em:text-gray-700 prose-em:italic
                          
                          /* === LISTS === */
                          prose-ul:my-6 prose-ul:space-y-2
                          prose-ol:my-6 prose-ol:space-y-2
                          prose-li:text-gray-800 prose-li:leading-relaxed prose-li:text-lg
                          prose-li:marker:text-blue-500
                          
                          /* === QUOTES === */
                          prose-blockquote:border-l-4 prose-blockquote:border-blue-500 prose-blockquote:bg-gradient-to-r prose-blockquote:from-blue-50 prose-blockquote:to-indigo-50 
                          prose-blockquote:py-6 prose-blockquote:px-8 prose-blockquote:my-8 prose-blockquote:rounded-r-xl prose-blockquote:shadow-sm
                          prose-blockquote:not-italic prose-blockquote:text-gray-800 prose-blockquote:text-lg prose-blockquote:font-medium
                          
                          /* === CODE === */
                          prose-code:bg-gray-100 prose-code:text-gray-800 prose-code:px-2 prose-code:py-1 prose-code:rounded-md prose-code:text-sm prose-code:font-mono prose-code:border
                          prose-pre:bg-gray-900 prose-pre:text-gray-100 prose-pre:rounded-xl prose-pre:p-6 prose-pre:shadow-lg prose-pre:my-8 prose-pre:overflow-x-auto
                          prose-pre:border prose-pre:border-gray-800 prose-pre:relative
                          
                          /* === TABLES === */
                          prose-table:my-8 prose-table:shadow-lg prose-table:rounded-lg prose-table:overflow-hidden prose-table:border prose-table:border-gray-200
                          prose-thead:bg-gray-50 prose-thead:border-b prose-thead:border-gray-200
                          prose-th:px-6 prose-th:py-4 prose-th:text-left prose-th:font-semibold prose-th:text-gray-900 prose-th:text-sm prose-th:uppercase prose-th:tracking-wide
                          prose-td:px-6 prose-td:py-4 prose-td:text-gray-800 prose-td:border-t prose-td:border-gray-200
                          prose-tbody:divide-y prose-tbody:divide-gray-200
                          
                          /* === IMAGES === */
                          prose-img:rounded-xl prose-img:shadow-lg prose-img:my-8 prose-img:border prose-img:border-gray-200
                          prose-figure:my-8
                          prose-figcaption:text-center prose-figcaption:text-sm prose-figcaption:text-gray-600 prose-figcaption:mt-3 prose-figcaption:italic
                          
                          /* === HORIZONTAL RULES === */
                          prose-hr:border-gray-300 prose-hr:my-12 prose-hr:border-t-2
                          
                          /* === SMALL TEXT === */
                          prose-sm:text-sm prose-sm:text-gray-600">
                <Content />
              </div>
            </div>
          </div>
        </article>
      </main>
    </div>

    <!-- Bouton retour en haut -->
    <button id="back-to-top" class="fixed right-6 bottom-6 p-3 bg-blue-600 text-white rounded-full shadow-lg hover:bg-blue-700 hover:scale-110 transition-all duration-200 opacity-0 pointer-events-none" aria-label="Retour en haut">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
      </svg>
    </button>
  </div>

  <!-- Overlay et sidebar mobile -->
  <div id="mobile-toc-overlay" class="lg:hidden fixed inset-0 bg-black bg-opacity-50 z-40 opacity-0 pointer-events-none transition-opacity duration-300"></div>
  
  <aside id="mobile-toc" class="lg:hidden fixed left-0 top-0 w-80 h-full bg-white z-50 transform -translate-x-full transition-transform duration-300 overflow-y-auto">
    <div class="p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-bold text-gray-900">ðŸ“‘ Sommaire</h3>
        <button id="toc-close" class="p-2 text-gray-500 hover:text-gray-700">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      
      <nav class="space-y-1">
        {tocItems.map((item) => (
          <a 
            href={`#${item.slug}`}
            class={`block py-2 px-3 rounded-lg text-sm hover:bg-blue-50 hover:text-blue-700 transition-all duration-200 mobile-toc-link ${
              item.depth === 2 ? 'text-gray-900 font-semibold' : 
              item.depth === 3 ? 'text-gray-700 ml-4 font-medium' : 
              'text-gray-600 ml-8'
            }`}
            data-target={item.slug}
          >
            {item.text}
          </a>
        ))}
      </nav>
    </div>
  </aside>

  <!-- Articles suggÃ©rÃ©s -->
  {otherPosts.length > 0 && (
    <section class="py-16">
      <div class="container mx-auto px-6">
        <h2 class="text-2xl md:text-3xl font-bold text-center text-gray-900 mb-12">
          Continuer la lecture
        </h2>
        <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
          {otherPosts.map((suggestedPost) => (
            <article class="group bg-white rounded-2xl shadow-sm overflow-hidden hover:shadow-lg transition-all duration-300 border border-gray-100">
              {suggestedPost.data.image && (
                <div class="aspect-video overflow-hidden">
                  <img 
                    src={suggestedPost.data.image} 
                    alt={suggestedPost.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    loading="lazy"
                  />
                </div>
              )}
              <div class="p-6">
                <time class="text-sm text-gray-500 mb-3 block">
                  {new Date(suggestedPost.data.publishDate).toLocaleDateString('fr-FR', {
                    day: 'numeric',
                    month: 'long',
                    year: 'numeric'
                  })}
                </time>
                <h3 class="text-xl font-bold text-gray-900 mb-3 line-clamp-2 group-hover:text-blue-600 transition-colors">
                  <a href={`/blog/${suggestedPost.slug}`}>
                    {suggestedPost.data.title}
                  </a>
                </h3>
                <p class="text-gray-700 mb-4 line-clamp-3">
                  {suggestedPost.data.description}
                </p>
                <a 
                  href={`/blog/${suggestedPost.slug}`}
                  class="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium transition-colors group"
                >
                  Lire l'article
                  <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Composant CTA -->
  <CTA 
    title="PrÃªt Ã  optimiser vos images ?"
    description="Mettez en pratique ces conseils avec notre outil gratuit de traitement par lot"
    buttonText="Utiliser l'outil maintenant"
    buttonLink="/"
    variant="green-orange"
  />
</MainLayout>

